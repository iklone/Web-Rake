{
    "name": "Web Rake",
    "version": "1.0",
    "description": "This is Chrome plug-in for team31 group work",
    "permissions": ["tabs","<all_urls>","declarativeContent", "storage", "activeTab", "contextMenus"],
    "background": {
      "scripts": ["js/background.js"],
      "persistent": false
    },
    "content_scripts": [
        {
        "matches": ["http://*/*","https://*/*"],
        "js": ["js/contentScript.js"]
        //"run_at": "document_end"         // allow the content script runs when the page has been fully loaded
        }
    ], 
  	"browser_action": {
		"default_title": "Web Rake", // The title that shows up when a user hovers on your icon
	    "default_popup": "html/popup.html" // The URL of your popup page
	},
    "manifest_version":2
}